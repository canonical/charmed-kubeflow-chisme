apiVersion: v1
kind: Service
metadata:
  name: myservice
  namespace: {{ namespace }}
spec:
  type: NodePort
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
    name: http
  - port: 443
    protocol: TCP
    name: https
  selector:
    run: app1
